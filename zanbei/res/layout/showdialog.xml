<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp" 
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/dialogTitleTxt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/dialogImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/dialog_error_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dialogContentTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/dialogContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" >
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/dividers" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/previousBtn"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_red_selector"
            android:padding="@dimen/default_layout_padding"
            android:textColor="@color/white"
            android:visibility="gone" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/middleimage"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/middle" />
        <Button
            android:id="@+id/middleBtn"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            
            android:layout_weight="1"
            android:background="@drawable/button_red_selector"
            android:padding="@dimen/default_layout_padding"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            
            android:layout_weight="1"
            android:background="@drawable/button_gray_selector"
            android:padding="@dimen/default_layout_padding"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>